<% layout('/layouts/boilerplate.ejs') %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control"
            required
            />
            <div class="valid-feedback">
              Title looks goods
            </div>
            <div class="invalid-feedback">
              Please Enter tittle
             </div>
            
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">
            Description looks goods
          </div>
          <div class="invalid-feedback">
            Please Enter Description
           </div>
        </div>
       

           <div class="mb-3">
            <lable for="image" class="form-label">Upload Image</lable>
            <input
            name="listing[image]"
            placeholder="enter image URL/Link"
            type="file" class="form-control"
         
          />
        
           </div>
          
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input name="listing[price]" placeholder="Sample price"  class="form-control"
                required 
                />
                <div class="valid-feedback">
                  Its a Valid Price
                </div>
                <div class="invalid-feedback">
                 Please Enter the valid price
                </div>
                <br /><br />
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>     
          <input name="listing[country]" placeholder="India" type="text" class="form-control"
          required
          />
          <div class="valid-feedback">
            Country Name Looks Good
          </div>
          <div class="invalid-feedback">
            Please Enter the Country Name
           </div>
            </div>
        </div>
      
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>     
            <input
        name="listing[location]"
        placeholder="Dabra , Gwalior"
        type="text" class="form-control"
        required
      />
      <div class="valid-feedback">
        Location Name Looks Good
      </div>
      <div class="invalid-feedback">
        Please Enter the Location Name
       </div>
        </div>
   
      <button class="btn btn-dark add-btn">Add</button>
      <br><br><br>
    </form>
    </div>
</div>
