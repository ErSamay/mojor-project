<% layout('/layouts/boilerplate.ejs') %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h1 class="col-6 offset-3">Signup on WanderLust</h1>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">username</lable>
                <input name="username"  
                id="username"
                type="text" 
                class="form-control"
                required
                />
                <div class="valid-feedback">
                  username looks goods
                </div>
                <div class="invalid-feedback">
                  Please Enter username
                 </div>
                
            </div>
            <div class="mb-3">
                <lable for="email" class="form-label">Email</lable>
                <input name="email"  
                id="email"
                type="text" 
                class="form-control"
                required
                />
                <div class="valid-feedback">
                     Valid Email
                  </div>
                  <div class="invalid-feedback">
                    Invalid Email
                   </div>
               
                
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password"  
                id="password"
                type="password" 
                class="form-control"
                required
                /> 
                <div class="valid-feedback">
                 Strong  Password 
                  </div>
                  <div class="invalid-feedback">
                    Week  Password 
                   </div>
            </div>
            <button class="btn btn-success">Signup</button>

        </form>
    </div>
</div>